{% extends "::base.html.twig" %}

{% block title %}PatientBundle:AdminPanel:showAll{% endblock %}

{% block body %}
    {% block topMenu %}
        {{ parent() }}
    {% endblock %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12" id="col2">
                <h1 style="text-align: center; font-size: 3em;">Panel Administracyjny</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12" style="text-align: center">
                <form method="post" action="{{ asset('showAll') }}" >
                    <select style="font-size: 150%" name="selectYear" onchange="form.submit()" id="yearSelection"
                            year="{{ visitYear }}">
                        <option value="2017" id="2017">2017</option>
                        <option value="2018" id="2018">2018</option>
                    </select>
                    <select style="font-size: 150%" name="selectMonth" onchange="form.submit()" id="monthSelection"
                            month="{{ visitMonth }}">
                        <option value="1" id="jan">Styczeń</option>
                        <option value="2" id="feb">Luty</option>
                        <option value="3" id="mar">Marzec</option>
                        <option value="4" id="apr">Kwiecień</option>
                        <option value="5" id="may">Maj</option>
                        <option value="6" id="jun">Czerwiec</option>
                        <option value="7" id="jul">Lipiec</option>
                        <option value="8" id="aug">Sierpień</option>
                        <option value="9" id="sep">Wrzesień</option>
                        <option value="10" id="oct">Październik</option>
                        <option value="11" id="nov">Listopad</option>
                        <option value="12" id="dec">Grudzień</option>
                    </select>
                    <select style="font-size: 150%" name="selectDay" id="daySelection" year="{{ visitYear }}">
                        {% for day in days %}
                            <option>{{ day }}</option>
                        {% endfor %}
                    </select>
                    <input type="submit" value="Pokaż">

                </form>
                {% if visit is defined %}
                    <table id="patientVisit" style=" margin-right: auto; margin-left: auto">
                        <tr>
                            <th>Data Wizyty:</th>
                            <th>Godzina wizyty:</th>
                            <th>Rodzaj wizyty</th>
                            <th>Godność:</th>
                            <th>Telefon:</th>
                            <th>Odwołaj:</th>
                        </tr>
                        {% for visit in visit %}
                            <tr>
                                <td>{{ visit.day }}.{{ visit.month }}.{{ visit.year }} r.</td>
                                <td>{{ visit.hour }}</td>
                                <td>{{ visit.visitType }}</td>
                                <td>{{ visit.surname }} {{ visit.name }}</td>
                                <td>{{ visit.phone }}</td>
                                <td><a href="{{ path('cancelVisit', {'hour': visit.hour, 'day': visit.day, 'month': visit.month, 'year': visit.year}) }}">Odwołaj</a></td>
                            </tr>
                        {% endfor %}
                    </table>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
