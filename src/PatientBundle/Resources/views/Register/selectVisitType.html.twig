{% extends "::base.html.twig" %}

{% block title %}PatientBundle:Register:SelectVisitType{% endblock %}

{% block body %}
    {% block topMenu %}
        {{ parent() }}
    {% endblock %}
    <div class="container-fluid">
        {{ include('upperBar.html.twig') }}
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12">
                <h3 class="center">Krok 1: Wybierz rodzaj wizyty:</h3>
            </div>
        </div>
        <div class="row" id="selectVisitType">
            <div class="col col-xs-12 col-sm-12 col-md-12">
                <form action="{{ asset('selectVisitType') }}" method="post">
                    <div class="row">
                        <div class="col-md-3 col-md-offset-3 center large">
                            <div class="radio-inline">
                                <label>
                                    <input id="radioButtonDiab" type="radio" name="visitType" value="diab" checked>
                                    &nbsp;&nbsp;Wizyta diabetologiczna
                                </label>
                            </div>
                        </div>
                        <div class="col-md-3 large center">
                            <div class="radio-inline">
                                <label>
                                    <input id="radioButtonDiet" type="radio" name="visitType" value="diet">
                                    &nbsp;&nbsp;Wizyta dietetyczna
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-8 col-md-offset-2 visitTypeSelection large center" id="diab">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit.<br>
                                Czas wizyty: <b>20 - 25 </b>minut <br>
                                Koszt wizyty: <b>100 zł</b>.<br><br>
                            <input type="submit" value="Zatwierdź">
                        </div>
                        <div class="col-md-8 col-md-offset-2 visitTypeSelection large center" id="diet">
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit.<br>
                                Czas wizyty: <b>40 - 50 </b>minut<br>
                                Koszt wizyty: <b>150 zł.</b><br><br>
                            <input type="submit" value="Zatwierdź">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
