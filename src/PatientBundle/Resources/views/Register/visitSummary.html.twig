{% extends "::base.html.twig" %}

{% block title %}PatientBundle:Register:Podsumowanie{% endblock %}

{% block body %}
    {% block topMenu %}
        <a href="#"><button>Strona główna</button></a>
        <a href="{{ path('selectVisitType') }}"><button>Umów kolejną wizytę</button></a>
    {% endblock %}
    <div id="visitSummary">
        <h2>Podsumowanie wizyty:</h2>
        <div class="leftSideVisitSummary" style="float: left">
            <p>Imię:</p>
            <p>Nazwisko:</p>
            <p>Rodzaj wizyty:</p>
            <p>Data Wizyty:</p>
            <p>Godzina:</p>
        </div>
        <div id="rightSideVisitSummary" style="">
            <p>{{ appointment.getName }}</p>
            <p>{{ appointment.getSurname }}</p>
            <p>{% if appointment.getVisitType == 'diab' %}
                    Diabetologiczna
                {% else %}
                    Dietetyczna
                {% endif %}
            </p>
            <p> {{ appointment.getDay }}/{{ appointment.getMonth }}/{{ appointment.getYear }} r.</p>
            <p>{{ appointment.getHour }}</p>
        </div>
    </div>
{% endblock %}

